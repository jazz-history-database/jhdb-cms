{
  "name": "jhdb-cms",
  "description": "Content management system for the Jazz History Database",
  "version": "0.0.1",
  "private": true,
  "license": "Apache-2.0",
  "author": "Jazz History Database",
  "repository": {
    "type": "git",
    "url": "https://github.com/jazzhistorydatabase/jhdb-cms.git"
  },
  "engines": {
    "node": "12.x.x"
  },
  "dependencies": {
    "@material-ui/core": "^4.11.2",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/styles": "^4.11.2",
    "@tinymce/tinymce-react": "^3.8.4",
    "@types/react": "^16.14.2",
    "axios": "^0.19.2",
    "backpack-core": "^0.8.4",
    "colors": "^1.4.0",
    "dropbox": "^4.0.30",
    "express": "^4.17.1",
    "express-handlebars": "^3.1.0",
    "firebase": "^8.2.1",
    "firebase-admin": "^9.4.2",
    "isomorphic-fetch": "^3.0.0",
    "js-file-download": "^0.4.12",
    "load-script": "^1.0.0",
    "lodash": "^4.17.20",
    "lodash.isequal": "^4.5.0",
    "notistack": "^0.9.17",
    "parcel": "^1.12.4",
    "re-base": "^4.0.0",
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "react-firebase-hooks": "^2.2.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "^4.0.1",
    "simple-oauth2": "^3.4.0",
    "typeface-roboto": "0.0.75"
  },
  "devDependencies": {
    "@google-cloud/nodejs-repo-tools": "^3.3.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "nodemon": "^2.0.6"
  },
  "proxy": "http://localhost:8080",
  "scripts": {
    "deploy": "gcloud app deploy",
    "devdeploy": "gcloud app deploy --version dev --no-promote",
    "start": "node --expose_gc build/main.js",
    "dev:react": "parcel watch client/index.html --public-url ./",
    "dev:express": "cross-env BROWSER=none DEV=true npx backpack dev --expose_gc",
    "local:express": "cross-env BROWSER=none DEV=true LOCAL=true FIRESTORE_EMULATOR_HOST=localhost:8000 FIREBASE_AUTH_EMULATOR_HOST=localhost:9099 npx backpack dev --expose_gc",
    "dev": "cross-env BROWSER=none DEV=true concurrently --kill-others --names \" PARCEL  , EXPRESS \" \"npm run dev:react\" \"npm run dev:express\"",
    "local": "cross-env BROWSER=none DEV=true LOCAL=true concurrently --kill-others --names \" PARCEL  , EXPRESS \" \"npm run dev:react\" \"npm run local:express\"",
    "build": "backpack build && parcel build client/index.html --public-url ./",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
